<script>
	// get the current day
	const today = new Date().getDay();
	// select data attribute data-day and bold selected day
	const dayData = document.querySelectorAll<HTMLElement>("[data-day]");

	switch (today) {
		case 0:
			dayData[0].style.fontWeight = "900";
			break;
		case 1:
			dayData[1].style.fontWeight = "900";
			break;
		case 2:
			dayData[2].style.fontWeight = "900";
			break;
		case 3:
			dayData[3].style.fontWeight = "900";
			break;
		case 4:
			dayData[4].style.fontWeight = "900";
			break;
		case 5:
			dayData[5].style.fontWeight = "900";
			break;
		case 6:
			dayData[6].style.fontWeight = "900";
			break;
		default:
			console.log("error");
	}
</script>
